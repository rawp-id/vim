{
  "languageserver": {
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"]
    },
    "python": {
      "command": "pylsp",
      "filetypes": ["python"]
    }
  },

  "suggest.autoTrigger": "always",

  "coc.extends": ["coc-pairs", "coc-prettier", "coc-eslint"],

  "pairs.enabled": true,

  "prettier.enable": true,
  "prettier.requireConfig": false,
  "prettier.trailingComma": "es5",
  "prettier.singleQuote": true,

  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
