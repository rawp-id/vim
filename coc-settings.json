{
  "languageserver": {
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"]
    },
    "python": {
      "command": "pylsp",
      "filetypes": ["python"]
    }
  },

  "suggest.autoTrigger": "always",
  //"coc.preferences.formatOnSave": true,

  // Auto install extensions jika belum terpasang
  "coc.extends": ["coc-pairs", "coc-prettier", "coc-eslint"],

  // Aktifkan coc-pairs secara otomatis
  "pairs.enabled": true,

  // Prettier configuration
  "prettier.enable": true,
  //"prettier.requireConfig": false, // Set true jika ingin pakai .prettierrc
  //"prettier.trailingComma": "es5",
  //"prettier.singleQuote": true,

  // ESLint configuration
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
